{
  "compilerOptions": {
    "target": "es5", // Or a higher target based on your needs (e.g., "es2015")
    "module": "commonjs", // CommonJS for Node.js compatibility
    "esModuleInterop": true, // Allow 'import' and 'export' for Node.js compatibility
    "strict": true, // Enable stricter type checking for better code quality
    "forceConsistentCasingInFileNames": true, // Ensures consistent file naming (optional)
    "skipLibCheck": true, // Avoid checking library files for errors (optional)
    "outDir": "dist/cjs", // Output compiled JavaScript files to the 'dist' directory
    "declaration": true, // Generate type declaration files (.d.ts) for consumers
  },
  "include": ["src"], // Include all files in the 'src' directory for compilation
  "exclude": ["node_modules", "dist"] // Exclude these directories
}
